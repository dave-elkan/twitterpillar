    <td colspan="2"></td>
    <td class="subtext">
        <span id="score_{{id}}">{{points}} points</span> by <a href="user?id={{postedBy}}">{{postedBy}}</a> {{postedAgo}} | <a href="item?id={{id}}">{{commentCount}} comments</a>
    </td>
</tr>
